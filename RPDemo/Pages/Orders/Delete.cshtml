@page
@model RPDemo.Pages.Orders.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (Model.Order is null)
{
    <h4>The requested record was not found.</h4>
}
else
{
    <div class="h4">
        Are you sure you want to delete the order you placed on @Model.Order.OrderDate?
    </div>
    <form method="post">
        <input asp-for="Id" value="@Model.Id" type="hidden" />
        <div class="form-group">
            <input type="submit" value="Delete Order" class="btn btn-danger" />
        </div>
    </form>
}