@model DataLibrary.Models.OrderModel

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete</h1>

@if (Model is null)
{
    <h4>The requested record was not found.</h4>
}
else
{
    <div class="h4">
        Are you sure you want to delete the order you placed on @Model.OrderDate?
    </div>
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger"/>
    </form>
}